page{
  color: #666;
  padding: 10rpx;
}

/* 首页导航 */
.nav_warp{}
.nav{
  /*如何处理元素内的空白*/
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
/* 注意两个类名之间没有空格*/
.nav_item.active{
  border-bottom: 5rpx solid #d81e06;
}

/* 轮播图 */
.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height: 220rpx;
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}

/*视频列表*/
.video_warp{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
  border-bottom: 1px solid rgba(102, 102, 102, 0.199)
}
.video_item{
  width: 48%;
  margin-bottom: 20rpx;
}
.video_img{
  position: relative;
}
.video_img image{
  width: 100%;
  border-radius: 15rpx;
}
.video_img .video_info{
  position: absolute;
  left: 0;
  bottom: 15rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
} 
.video_img .video_info text{
  margin-right: 5rpx;
}
.video_title{
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.bottom_info{
  display: flex;
  justify-content: center;
  font-size: 22rpx;
  padding: 20rpx;
}